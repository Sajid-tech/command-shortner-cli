{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "isolatedModules": true
    },
    "include": [
        "src/**/*",
        "scripts/**/*",
        "bin/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}